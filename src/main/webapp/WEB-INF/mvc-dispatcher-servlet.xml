<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:spring-configured/>
    <context:annotation-config />
    <context:load-time-weaver/>

    <bean id="mainController" class="com.epam.jmp2017.controller.MainController"/>

    <alias name="conditionsLoader" alias="loader" />
    <bean id="conditionsLoader" class="com.epam.jmp2017.util.loaders.ConditionsLoader" init-method="cacheConditions">
        <property name="path" value="D:/Programing/Workspace/Repositories/jmp2017/conditions/" />
    </bean>

    <bean id="actionModel" class="com.epam.jmp2017.model.json.ActionModel" />

    <bean id="compositeCondition" class="com.epam.jmp2017.model.conditions.CompositeCondition" />

    <bean id="equalsCondition" parent="compositeCondition" />

    <bean id="lengthCondition" parent="compositeCondition" />

    <bean id="worker" class="com.epam.jmp2017.util.workers.Worker" lazy-init="true" />

    <bean id="jsonWorker" class="com.epam.jmp2017.util.workers.JsonWorker" />

</beans>