<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.3.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven />
    <context:component-scan base-package="com.epam.jmp2017.util.loaders" />

    <alias name="conditionsLoader" alias="loader"/>
    <bean id="conditionsLoader" class="com.epam.jmp2017.util.loaders.ConditionsLoader"
          autowire="byName"
          init-method="cacheConditions"
          scope="singleton">
        <property name="path" value="D:/Programing/Workspace/Repositories/jmp2017/conditions/" />
    </bean>

</beans>